{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "backup": {
      "description": "The backup items",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "repository": {
            "description": "Repository local path or specific an opendal service.",
            "type": "string"
          },
          "password": {
            "description": "Repository password",
            "type": "string"
          },
          "options": {
            "description": "Repository options",
            "type": "object"
          }
        },
        "required": [
          "repository",
          "password",
          "options"
        ]
      }
    }
  },
  "required": [
    "backup"
  ]
}
